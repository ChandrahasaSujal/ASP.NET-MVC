@model DataBindingDemo.Models.Product


<h2>Product Details</h2>

<table border="1" width="400">
    <tr>
        <td>
            <img src='@Url.Content(Model.Photo)' width="200" height="150" />
        </td>
        <td>
            <table border="1" width="100">
                <th>PId</th>
                <th>Name</th>
                <th>Price</th>
                <tr>
                    <td>@Model.ProductId</td>
                    <td>@Model.Name</td>
                    <td>@Model.Price</td>
                </tr>
            </table>
        </td>
    </tr>
</table>
<br />

@Html.ActionLink("Back to Details","Index")